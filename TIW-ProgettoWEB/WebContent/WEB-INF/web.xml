<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>TIW-ProgettoWEB</display-name>
	<context-param>
		<param-name>dbUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/progettoweb?serverTimezone=Europe/Rome</param-value>
	</context-param>
	<context-param>
		<param-name>dbUser</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>
	<filter>
		<filter-name>LoginChecker</filter-name>
		<filter-class>tiw.filters.LoginChecker</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginChecker</filter-name>
		<url-pattern>/CreaSuggerimentoRubrica</url-pattern>
		<url-pattern>/EstraiSuggerimentoRubrica</url-pattern>
		<url-pattern>/OrdinaTrasferimento</url-pattern>
		<url-pattern>/ControllaSuggGiaInRubrica</url-pattern>
		<url-pattern>/CreaConto</url-pattern>
		<url-pattern>/Logout</url-pattern>
		<url-pattern>/VaiAllaHome</url-pattern>
		<url-pattern>/VediStatoConto</url-pattern>
		<url-pattern>/HomeCS.html</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>